<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="show_activitys.Chair_Bus">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:text="جایی که دوست دارید بنشینید را مشخص کنید"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:text="قابل خرید"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:drawableRight="@drawable/circle_gray"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:drawableRight="@drawable/circle_blue"
        android:text="خریداری شده توسط آقا"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:text="خریداری شده توسط خانم"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:drawableRight="@drawable/circle_pink"
        android:layout_height="wrap_content"/>



</LinearLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:text="جایگاه راننده"
            android:drawableLeft="@drawable/farman"
            android:gravity="left|center"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycler_chair"
        android:layout_height="wrap_content"/>

</androidx.cardview.widget.CardView>




<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="?attr/actionBarSize">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:background="@drawable/btn_style_chair_empty"
        android:fontFamily="@font/font1"
        android:padding="4dp"
        android:id="@+id/chair_btn_taeed"
        android:layout_weight=".4"
        android:layout_marginLeft="8dp"
        android:text="تایید"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:id="@+id/textView_chair_gheimat"
        android:layout_weight=".3"
        android:text="223 هزار تومان"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="10dp"
        android:text="قیمت بلیط برای ۱ نفر:"
        android:id="@+id/textView_chair_tedad"
        android:textColor="@color/black"
        android:textSize="16dp" />

</LinearLayout>



    </LinearLayout>
</ScrollView>