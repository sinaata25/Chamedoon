<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="30dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/app_name_persian"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="4dp"
            android:layout_weight=".33"
            android:id="@+id/cardview_bus"
            android:layout_marginRight="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:src="@drawable/bus" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bus"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textStyle=""
                        android:textSize="25dp"
                        android:layout_weight=".4"/>
                </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_weight=".33"
            android:clickable="true"
            android:id="@+id/cardview_train"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView_train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:src="@drawable/train1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/train"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight=".4"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/cardview_airplane"
            android:layout_weight=".33"
            android:clickable="true"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView_airplane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:src="@drawable/aiplane1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flight"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight=".4"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_weight=".5"
            android:id="@+id/cardview_hotel"
            android:layout_marginRight="1dp"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView_hotel"
                    android:layout_width="match_parent"
                    android:paddingTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:src="@drawable/hotel" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotel"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight=".4"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_weight=".5"
            android:clickable="true"
            android:id="@+id/cardview_tour"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView_toor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:src="@drawable/tickets" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/toor"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight=".4"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>


    </ScrollView>
