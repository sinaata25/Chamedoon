<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:id="@+id/card_train_show_list"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_type_trainlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:text="VIP" />


            <TextView
                android:id="@+id/textView_date_train_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:textStyle="bold"
                android:text="1399/7/26" />




            <TextView
                android:id="@+id/textView_coupecapacity_trainlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:textSize="12dp"
                android:text="کوپه ای ۴ نفره" />



        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_price_trainlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="2,300,000" />



            <TextView
                android:id="@+id/textView_company_trainlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:background="@drawable/style_textview_3"
                android:textSize="40dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/font1"
                android:textColor="@color/blue"
                android:text="رجا" />



        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/textView_start_time_train"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".15"
                android:gravity="center"
                android:textStyle="bold"
                android:text="7" />


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/textView_endtime_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center"
                android:textStyle="bold"
                android:text="17" />








            <TextView
                android:id="@+id/textView_capacity_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:gravity="right"
                android:paddingRight="40dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="60نفر" />











        </LinearLayout>










    </LinearLayout>


</androidx.cardview.widget.CardView>